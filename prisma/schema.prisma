datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

/// @@allow('all', has(auth().role, 'admin'))
model Post {
  id        Int      @id() @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@index([name])
}

model User {
  id            String    @id() @default(cuid())
  name          String?
  password      String?
  email         String?   @unique()
  emailVerified DateTime?
}

/// @@auth
/// @@allow('all', true)
model SystemUser {
  id            String    @id() @default(cuid())
  name          String?
  email         String?   @unique()
  password      String?
  emailVerified DateTime?
  image         String?
  role          String[]
}

/// @@allow('all', has(auth().role, 'admin'))
model Client {
  id              Int       @id() @default(autoincrement())
  fantasyName     String?
  companyName     String
  cnpj            String
  cnaeDescription String?
  cnaeCode        String?
  openingDate     String?
  address         Json?
  contactNumber   String?
  contactEmail    String?
  createdAt       DateTime? @default(now())
  updatedAt       DateTime? @updatedAt()
  contacts        Json?
}
